<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Pages.FinalPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label 
                x:Name="lbl1"
                Margin="10,10,10,10"   
                HorizontalTextAlignment="Center"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />

                <Grid x:Name="gridFrm" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" Margin="30, 0, 30 ,0">

                    <!-- Region Jméno -->
                    <Label 
                    Text="Jméno:" 
                    HorizontalOptions="Start" 
                    VerticalTextAlignment="Center" 
                    HorizontalTextAlignment="End"
                    Grid.Row="0"
                    Grid.Column="0"/>
                    <Entry 
                    x:Name="editName"
                    HorizontalOptions="FillAndExpand"
                    Grid.Row="0"
                    Grid.Column="1"
                        Focused="Edit_Focused"/>
                    <!-- EndRegion -->

                    <!-- Region Příjmení -->
                    <Label 
                    Text="Příjmení:" 
                    HorizontalOptions="Start" 
                    VerticalTextAlignment="Center" 
                    HorizontalTextAlignment="End"
                    Grid.Row="1"
                    Grid.Column="0"/>
                    <Entry 
                    x:Name="editName2"
                    HorizontalOptions="FillAndExpand"
                    Grid.Row="1"
                    Grid.Column="1"
                    Focused="Edit_Focused"/>
                    <!-- EndRegion -->

                    <!-- Region Email -->
                    <Label 
                    Text="Email:" 
                    HorizontalOptions="Start" 
                    VerticalTextAlignment="Center" 
                    HorizontalTextAlignment="End"
                    Grid.Row="2"
                    Grid.Column="0"/>
                    <Entry 
                    x:Name="editMail"
                    Keyboard="Email"
                    HorizontalOptions="FillAndExpand"
                    Grid.Row="2"
                    Grid.Column="1"
                    Focused="Edit_Focused"/>
                    <!-- EndRegion -->

                    <!-- Region Email Potvrzení -->
                    <Label 
                    Text="Potvrzení emailu:" 
                    HorizontalOptions="Start" 
                    VerticalTextAlignment="Center" 
                    HorizontalTextAlignment="End"
                    Grid.Row="3"
                    Grid.Column="0"/>
                    <Entry 
                    x:Name="editMail2"
                    Keyboard="Email"
                    HorizontalOptions="FillAndExpand"
                    Grid.Row="3"
                    Grid.Column="1"
                    Focused="Edit_Focused"/>
                    <!-- EndRegion -->

                    <!-- Region Telefon -->
                    <Label 
                    Text="Telefonní číslo (nepovinné):" 
                    HorizontalOptions="Start" 
                    VerticalTextAlignment="Center" 
                    HorizontalTextAlignment="Start"
                    Grid.Row="4"
                    Grid.Column="0"/>
                    <Entry 
                    x:Name="editPhone"
                    Keyboard="Telephone"
                    HorizontalOptions="FillAndExpand"
                    Grid.Row="4"
                    Grid.Column="1"/>
                    <!-- EndRegion -->

                </Grid>

                <Label
                Margin="10,10,10,10"    
                Text="Odesláním emailu souhlasíte s následujícímí podmínky:"
                HorizontalOptions="CenterAndExpand"/>

