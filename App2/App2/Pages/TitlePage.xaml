<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.Pages.TitlePage">
    <ContentPage.Content>
        <StackLayout>
            <Image/>
            <Label Text="Nikdo vám nedá více.."
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button x:Name="BtnNext"
                    Text="Další" 
                    VerticalOptions="End" 
                    HorizontalOptions="CenterAndExpand" Clicked="BtnNext_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>